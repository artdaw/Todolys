<% content_for :title, "Reset your password" %>

<% if @user.errors.any? %>
    <div class="grid_6 prefix_3 suffix_3">
      <div id="error_explanation">
        <h2>There are <%= pluralize(@user.errors.count, "error") %>:</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>
<%= form_for @user, :as => :user, :url => password_reset_path do |form| %>
<p class="grid_6 prefix_3">
      <%= form.label :password, "Pick a password:" %>
      <%= form.password_field :password %>
    </p>
	<p class="grid_6 prefix_3">
      <%= form.label :password_confirmation, "Enter this password again:" %>
      <%= form.password_field :password_confirmation %>
    </p>
    <p class="grid_4 prefix_3 suffix_7">
      <%= form.submit "Create password" %>
    </p>
<% end %>