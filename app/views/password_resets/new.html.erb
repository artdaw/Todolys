<% content_for :title, "Reset your password" %>

<% if @user.errors.any? %>
    <div class="grid_6 prefix_3 suffix_3">
      <div id="error_explanation">
        <h2>There are <%= pluralize(@user.errors.count, "error") %>:</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>
<%= form_for @user, :as => :user, :url => { :action => 'create', :controller => 'password_resets' } do |form| %>
    <p class="grid_6 prefix_3">
      <%= form.label :email, "Enter your email" %>
      <%= form.text_field :email %>
    </p>
    <p class="grid_4 prefix_3 suffix_7">
      <%= form.submit "Request new password" %>
    </p>
<% end %>