<% content_for :title, "Log into your account" %>
<h3>Happy <%= Time.new.strftime("%A") %>.</h3>
<h1>Welcome back, stranger!</h1>
<% if @user_session.errors.any? %>
    <div class="grid_6 prefix_3 suffix_3">
      <div id="error_explanation">
        <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user from being logged:</h2>

        <ul>
          <% @user_session.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>
<%= form_for @user_session, :as => :user_session, :url => {:action => "create"} do |form| %>
    <p class="grid_6 prefix_3">
      <%= form.label :username, "Username:" %>
      <%= form.text_field :username %>
    </p>
    <p class="grid_6 prefix_3">
      <%= form.label :password, "Password:" %>
      <%= form.password_field :password %>
    </p>
    <p class="grid_2 prefix_3 suffix_7">
      <%= form.submit "Sign in" %>
    </p>

<% end %>