<% content_for :title, "Log into your @account" %>

<% if @user_session.errors.any? %>
<div class="grid_6 prefix_2 suffix_4">
	<div id="error_explanation">
		<h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user from being logged:</h2>

		<ul>
			<% @user_session.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
</div>
<% end %>
<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |form| %>
<p class="grid_1 prefix_2 omega">
	<%= form.label :username, "Username:" %>  
</p>
<p class="grid_3 suffix_6">
	<%= form.text_field :username %>  
</p>  
<p class="grid_1 prefix_2 omega">   
	<%= form.label :password, "Password:" %>  
</p> 
<p class="grid_3 suffix_6">	
	<%= form.password_field :password %>  
</p>  
<p class="grid_3 prefix_3 suffix_6 alpha">
	<%= form.submit "Sign in" %>  
</p>  

<% end %>